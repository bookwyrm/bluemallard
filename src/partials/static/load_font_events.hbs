(function() {
  function fontLoaded(type, key) {
    window.document.documentElement.className += ' html__font-loaded--' + type;
    sessionStorage['fontLoaded' + key] = true
  }
  function fontLoadFailed(key) {
    sessionStorage['fontLoaded' + key] = false
  }
  
  if ( !!sessionStorage.fontLoadedPrimary ) {
    window.document.documentElement.className += ' html__font-loaded--primary';
  } else {
    new FontFaceObserver('Roboto').load(null, 5000).then(function() {
      fontLoaded('primary', 'Primary');
    }).catch(function() {
    fontLoadFailed('Primary');
    });
  }

  if ( !!sessionStorage.fontLoadedSecondary ) {
    window.document.documentElement.className += ' html__font-loaded--secondary';
  } else {
    new FontFaceObserver('Roboto Slab').load(null, 5000).then(function() {
      fontLoaded('secondary', 'Secondary');
    }).catch(function() {
    fontLoadFailed('Secondary');
    });
  }

  if ( !!sessionStorage.fontLoadedAccent ) {
    window.document.documentElement.className += ' html__font-loaded--accent';
  } else {
    new FontFaceObserver('Oswald').load(null, 5000).then(function() {
      fontLoaded('accent', 'Accent');
    }).catch(function() {
    fontLoadFailed('Accent');
    });
  }
}())

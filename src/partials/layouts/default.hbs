{{!-- layouts/default.hbs --}}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>CSS Dev Conf 2016</title>
    <link rel="stylesheet" href="styles.css" type="text/css">
    {{> static/fonts}}
    <script>
      {{> static/fontfaceobserver}}
      {{> static/load_font_events}}
      {{> static/loadcss}}
    </script>
  </head>
  <body>
    <header class="g-header">
      <div class="l-container">
        {{> site-logo}}
        {{#> primary-nav-block}}
          {{> navigation/nav--primary}}
        {{/primary-nav-block}}
      </div>
    </header>
    {{> hero-block}}
    {{> content-block}}
    <footer class="c-section g-footer">
      <div class="l-container">
        <div class="g-footer__contact">
          {{> site-logo logo-footer="true"}}
        </div>
        <div class="g-footer__menu">
          <h4 class="g-footer__title">Conference</h4>
          <a href="#" class="g-footer__link">Home</a>
          <a href="#" class="g-footer__link">Speakers</a>
          <a href="#" class="g-footer__link">Details</a>
          <a href="#" class="g-footer__link">Hotel & Venue</a>
          <a href="#" class="g-footer__link">Our Sponsors</a>
          <a href="#" class="g-footer__link">Register</a>
        </div>
        <div class="g-footer__menu">
          <h4 class="g-footer__title">Help Us</h4>
          <a href="#" class="g-footer__link">Volunteer</a>
          <a href="#" class="g-footer__link">Sponsor Us</a>
        </div>
        <div class="g-footer__menu">
          <h4 class="g-footer__title">Follow Us</h4>
          <a href="#" class="g-footer__link">Twitter</a>
          <a href="#" class="g-footer__link">Facebook</a>
          <a href="#" class="g-footer__link">Instagram</a>
        </div>
      </div>
    </footer>
  </body>
</html>
